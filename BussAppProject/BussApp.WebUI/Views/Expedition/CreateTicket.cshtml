@model Passenger


<h1 class="display-4 text-danger">Gidiş Bilgileri</h1>
<form asp-action="Create" asp-controller="Expedition" method="post" class="container">

    <table class="table table-dark text-white">
        <thead class="text-danger">
            <tr>
                <td>Nereden</td>
                <td>Nereye</td>
                <td>Tarih</td>
                <td>Saat</td>
                <td>Fiyat</td>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td> @ViewBag.Expedition.ExpeditionStart</td>
                <td> @ViewBag.Expedition.ExpeditionFinish</td>
                <td> @ViewBag.Expedition.ExpeditionDate</td>
                <td> @ViewBag.Expedition.ExpeditionHour</td>
                <td> @ViewBag.Expedition.ExpeditionPrice</td>
            </tr>
        </tbody>
    </table>


    <div class="row d-flex flex-wrap">
        <div class="col-md-6 w-50">

            <input type="hidden" asp-for="Start" value="@ViewBag.Expedition.ExpeditionStart" class="form-control" />
            <input type="hidden" asp-for="Finish" value="@ViewBag.Expedition.ExpeditionFinish" class="form-control" />
            <input type="hidden" asp-for="Date" value="@ViewBag.Expedition.ExpeditionDate" class="form-control" />
            <input type="hidden" asp-for="Hour" value="@ViewBag.Expedition.ExpeditionHour" class="form-control" />

            <div class="form-group row">

                <div class="col-sm-5">
                    <label class="col-sm-2 col-form-label">Ad</label>
                    <input type="text" asp-for="Name" class="form-control" />
                </div>
            </div>

            <div class="form-group row">

                <div class="col-sm-5">
                    <label class="col-sm-2 col-form-label">Soyadı</label>
                    <input type="text" asp-for="Surname" class="form-control" />
                </div>
            </div>



            <div class="form-group row">

                <div class="col-sm-5">
                    <label class="col-sm-2 col-form-label">Telefon</label>
                    <input type="text" asp-for="PhoneNumber" class="form-control" />
                </div>
            </div>




        </div>

        <div class="form-group row">

            <div class="col-sm-5">
                <input type="hidden" asp-for="ExpeditionId" value="@ViewBag.Expedition.ExpeditionId" class="form-control" />
            </div>
        </div>

    </div>

    <div class="w-50">
        <img src="~/img/koltuk.png" id="koltuk" />
    </div>

    <div class="form-group row mt-2">
        <select asp-for="SeatNumber" class="form-select form-select-lg mb-3" asp-items="@ViewBag.Koltuklar" required="required" style="width: 630px; height:45px; margin-left: 30px;">
            <option selected disabled>Koltuk Seçiniz</option>
        </select>
    </div>

    <button type="submit" class="btn btn-info ml-2">Bilet Al</button>

</form>





