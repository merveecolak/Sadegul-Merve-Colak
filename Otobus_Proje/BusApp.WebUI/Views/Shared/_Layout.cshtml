<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Otobus_Proje</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/style.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
        
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-dark border-bottom box-shadow m-0 w-100" id="nav">
            <div class="container">
                <div class="resim1"><a><img src="~/img/logo-removebg-preview.png" class="container-fluid"/></a></div>
                <a class="h1 navbar-brand text-white font-weight-bolder font-italic size" asp-area="" asp-controller="Home" asp-action="Index">Star Otobüs</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-end">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Index">Otel</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Index">Araç Kiralama</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Index">Yolcum Nerede</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Index">İletişim</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Index">Rezervasyon</a>
                        </li>
                    </ul>
                </div>
            </div>
            <nav>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-end">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Index">Üye ol</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Privacy">Giriş Yap</a>
                        </li>
                    </ul>
                </div>
            </nav>
        </nav>

    </header>
    
        <main role="main" class="mt-5">
            @RenderBody()
        </main>
    

    
        <footer class="row row-cols-5 py-5 my-5 border-top">
            <div class="col">
                <a href="/" class="d-flex align-items-center mb-3 link-dark text-decoration-none">
                    <svg class="bi me-2" width="20" height="32"><use xlink:href="#bootstrap" /></svg>
                </a>
                <p class="text-muted">&copy; 2021</p>
            </div>

            <div class="col">
                <h5>Kurumsal</h5>
                <ul class="nav flex-column">
                    <li class="nav-item mb-2"><a href="#" class="nav-link p-0 text-muted">Tarihçe</a></li>
                    <li class="nav-item mb-2"><a href="#" class="nav-link p-0 text-muted">Filomuz</a></li>
                    <li class="nav-item mb-2"><a href="#" class="nav-link p-0 text-muted">İş Başvurusu</a></li>
                </ul>
            </div>

            <div class="col">
                <h5>Seyehat Kılavuzu</h5>
                <ul class="nav flex-column">
                    <li class="nav-item mb-2"><a href="#" class="nav-link p-0 text-muted">Covid-19 Bilgisi</a></li>
                    <li class="nav-item mb-2"><a href="#" class="nav-link p-0 text-muted">Mobil Uygulamalar</a></li>
                    <li class="nav-item mb-2"><a href="#" class="nav-link p-0 text-muted">Yolcum Nerede</a></li>

                </ul>
            </div>

            <div class="col">
                <h5>İletişim</h5>
                <ul class="nav flex-column">
                    <li class="nav-item mb-2"><a href="#" class="nav-link p-0 text-muted">Şubeler ve Acentalar</a></li>
                    <li class="nav-item mb-2"><a href="#" class="nav-link p-0 text-muted">Şehir içi Servisler</a></li>
                    <li class="nav-item mb-2"><a href="#" class="nav-link p-0 text-muted">Öneri ve Şikayet</a></li>
                   
                </ul>
            </div>
            <div class="col">
                <h5>Yolcu Hizmetleri</h5>
                <ul class="nav flex-column">
                    <li class="nav-item mb-2"><a href="#" class="nav-link p-0 text-muted">Telefon</a></li>
                    <li class="nav-item mb-2"><a href="#" class="nav-link p-0 text-muted">Mail</a></li>
                </ul>
            </div>
        </footer>
    
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
</body>
</html>
