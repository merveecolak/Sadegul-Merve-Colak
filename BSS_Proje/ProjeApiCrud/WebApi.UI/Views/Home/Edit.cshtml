@model Product


<h6 class="display-6">Edit Product</h6>
<hr>
<form asp-action="Edit">

    <div class="row">

        <div class="col-md-12">
            <label>ID:</label>
            <label asp-for="ProductId">@Model.ProductId</label>
        </div>

        <div class="col-md-12">
            <label>Product Name:</label>
            <input type="text" asp-for="ProductName">
        </div>    

        <div class="col-md-12">
            <label>Product Description:</label>
            <input type="text" asp-for="ProductDescription">
        </div>

        <div class="col-md-12">
            <label>Product Price:</label>
            <input type="text" asp-for="ProductPrice">
        </div>
         
        <div class="col-md-12">
            <label>Product Date:</label>
            <input type="text" asp-for="ProductDateCreate">
        </div>
        
        <div class="col-md-12">
            <label>Product Category:</label>
            <input type="text" asp-for="Category">
        </div>
    </div>
    <hr />
    <input class="btn btn-primary" type="submit" value="Save Changes">

</form>

                